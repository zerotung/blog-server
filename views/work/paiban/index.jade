doctype html
html
  head
    title 排班
    link(rel='stylesheet', href='/stylesheets/styles.min.css')
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    script(src="/javascripts/scripts.min.js")
  body
    div.container
        //- p #{date}
        div.header
            h1 寒假值班排班系统
        form(role='form', method='POST', action='/work/paiban')
            div.form-group
                input(type="text", class='form-control input-lg',name="name", id="name", placeholder="请输入您的姓名")
            div.form-group
                input(type="text", class='form-control input-lg',name="tel", id="tel", placeholder="请输入您的电话")
            div.form-group
                select.form-control.input-lg(name="date")
                    option(value=-1) 请选择值班日期
                    -for (var i = 0; i < date.length; i++)
                        option(value="#{i}") #{date[i].date}
            button(type="submit", class='btn-lg btn-block btn-primary') 提交